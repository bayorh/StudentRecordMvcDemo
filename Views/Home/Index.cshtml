@model IEnumerable< StudentRecord.Models.Entities.Student>

<div >
    <h2>Students </h2>
    <h6>counts: @ViewBag.Count</h6>
    <p> 
        <a asp-action="Create" class="btn btn-primary" > Create</a>
    </p>
    <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                  
                </tr>
                
            </thead>
            <tbody>
                @foreach (var student in @Model)
                {
                    <tr>
                        <td> @student.Name </td>
                        <td> @student.Age </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                        </td>

                </tr>
                   
                }
            </tbody>

        </table>

</div>
